# Database
DATABASE_URL="postgresql://username:password@localhost:5432/bowen_island_tattoo"

# Supabase (Authentication)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Square API
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_APPLICATION_ID=your-square-app-id
SQUARE_LOCATION_ID=your-square-location-id
SQUARE_ENVIRONMENT=sandbox
SQUARE_WEBHOOK_SIGNATURE_KEY=your-webhook-signature-key

# Square Sync Settings
ENABLE_AUTO_SQUARE_SYNC=false # Set to true to enable automatic Square sync
DISABLE_SQUARE_SYNC=false # Set to true to disable automatic sync (useful for soft launch)
SQUARE_SYNC_INTERVAL=900000 # Sync interval in milliseconds (default: 15 minutes)

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name

# Frontend URLs
NEXT_PUBLIC_BACKEND_API_URL=http://localhost:3001
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=ml_default

# Optional
FRONTEND_URL=http://localhost:3000
PORT=3001

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@bowenislandtattoo.com
# EMAIL_ENABLED=false # Set to false to disable emails in development

# Owner/Admin Notifications
OWNER_EMAIL=owner@bowenislandtattoo.com # Email address to receive admin notifications
# OWNER_NOTIFICATION_ENABLED=true # Set to false to disable owner notifications

# Staff Access Security
STAFF_ACCESS_CODE=your-staff-access-code # Required code for staff login page access (see docs/STAFF_ACCESS_CODE_SETUP.md)

# Email Automation
# ENABLE_EMAIL_AUTOMATION=false # Set to false to disable email automation
# Business hours for email sending (Pacific Time)
# Emails will only be sent between these hours when business_hours_only is enabled
# Default: 9 AM - 8 PM PST

# reCAPTCHA v3 (Bot Protection)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (optional - automatically enabled when deployed to Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_MODE=production