{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "buildCommand": "cp server-package.json package.json && npm ci --production=false && npm run build"
  },
  "deploy": {
    "startCommand": "node dist/lib/server.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  }
} 