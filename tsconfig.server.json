{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmit": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022"
  },
  "include": ["lib/**/*", "lib/types/**/*", "node_modules/.prisma/client/**/*"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/__tests__/**"]
} 