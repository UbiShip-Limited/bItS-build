{
  "framework": "nextjs",
  "buildCommand": "npm run build:vercel",
  "installCommand": "rm -rf node_modules package-lock.json && npm install",
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "FORCE_REBUILD": "v18-nextjs14-downgrade-fix"
    }
  }
}