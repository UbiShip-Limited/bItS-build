{
  "buildCommand": "npm run build",
  "installCommand": "rm -rf node_modules package-lock.json && npm install",
  "framework": "nextjs",
  "functions": {
    "src/app/**/*.tsx": {
      "maxDuration": 30
    },
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "FORCE_REBUILD": "v10-clean-install"
    }
  }
}