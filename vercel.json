{
  "buildCommand": "npm run build",
  "installCommand": "npm ci --force",
  "framework": "nextjs",
  "functions": {
    "src/app/dashboard/tattoo-request/[id]/*.tsx": {
      "maxDuration": 30
    },
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "FORCE_REBUILD": "v9-simplified"
    }
  }
}